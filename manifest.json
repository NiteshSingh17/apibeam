{
  "manifest_version": 3,
  "name": "ApiBeam",
  "description": "Convert your chatgpt account to an api.",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "host_permissions": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"],

  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": []
    },
    {
      "resources": ["loader.js"],
      "matches": ["https://chatgpt.com/*"]
    },
    {
      "resources": ["src/pages/settings/index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
